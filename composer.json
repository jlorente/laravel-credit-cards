{
    "name": "jlorente/laravel-credit-cards",
    "description": "Laravel >=5.6 integration for the PHP Credit Cards package that allows to perform operations on debit and credit cards like format, validate brand, number and Luhn algorithm.",
    "keywords": [
        "php",
        "jlorente",
        "laravel",
        "creditcard",
        "creditcards",
        "debit",
        "card",
        "cards",
        "validate",
        "visa",
        "mastercard",
        "american express",
        "discover",
        "diners club",
        "unionpay"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "JosÃ© Lorente",
            "email": "jose.lorente.martin@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "illuminate/support": ">=5.6",
        "jlorente/php-credit-cards": "^1.0.2"
    },
    "require-dev": {
        "orchestra/testbench": "^3.6",
        "phpunit/phpunit": "^8.0.0"
    },
    "autoload": {
        "psr-4": {
            "Jlorente\\Laravel\\CreditCards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Jlorente\\Laravel\\CreditCards\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jlorente\\Laravel\\CreditCards\\CreditCardsServiceProvider"
            ],
            "aliases": {
                "PayU": "Jlorente\\Laravel\\CreditCards\\Facades\\CreditCard"
            }
        }
    },
    "minimum-stability": "stable"
}
